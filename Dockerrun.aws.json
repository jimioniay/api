{
  "AWSEBDockerrunVersion": "2",
  "containerDefinitions": [
    {
      "name": "api",
      "image": "jimipayne/api",
      "cpu": "100",
      "memory": "1000",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DEV_SERVER_PORT",
          "value": "80"
        }
      ],

      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fargate-task-definition",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
